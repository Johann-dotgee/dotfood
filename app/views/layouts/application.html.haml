    .container
      -if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      -if flash[:error]
        .alert.alert-error
          = flash[:error]

      .content
        .row
          .span12
            = yield
    .navbar.navbar-fixed-bottom
      .navbar-inner
        .container
          %ul.nav
            %li=link_to "&copy; 2012 - Dotgee".html_safe, dashboard_restaurants_path, :class => "copy"
    /
