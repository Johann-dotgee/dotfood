!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Dotfood"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .subnavbar
      .subnavbar-inner
        .container
          %ul
            = li_dropdown_nav [dashboard_restaurants_path, new_restaurant_path, restaurants_path], ["glass", "star-empty", "plus", "eye-open"], ["Restaurants", "Restaurant Ranking", "Add Restaurant", "Restaurant List"]
            -if user_signed_in?
              = li_list([user_path(current_user), user_groups_path(current_user)], ["user", "group"], ["Profil", "Mes Groupes"])
              - unless current_user.groups.blank?
                - links = [], icons = ["calendar"], texts = ["Mes événements"]
                - current_user.groups.each_with_index do |group, i|
                  - links = (i == 0) ? ["#{group_events_path(group)}"] : links + [group_events_path(group)]
                  - icons = icons + ["eye-open"]
                  - texts = texts + [group.name]
                = li_dropdown_nav(links, icons, texts)

          - if user_signed_in?
            %ul.pull-right
              - if current_user.has_role? :admin
                = li_nav(users_path, "cogs", "Manage Users")
              %li
                =link_to destroy_user_session_path, :method => :delete do
                  %i.icon-off
                  %span Sign Out
          - else
            %ul.pull-right
              =li_list([new_user_session_path, new_user_registration_path], ["off", "plus-sign"], ["Sign In", "Sign Up"])

    .container
      -if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      -if flash[:error]
        .alert.alert-error
          = flash[:error]

      .content
        .row
          .span12
            = yield
    .navbar.navbar-fixed-bottom
      .navbar-inner
        .container
          %ul.nav
            %li=link_to "&copy; 2012 - Dotgee".html_safe, dashboard_restaurants_path, :class => "copy"
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = javascript_include_tag "restaurants"
    = javascript_include_tag "events"
