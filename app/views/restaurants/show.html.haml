%p#notice= notice

.page-header
  %h1= @restaurant.name
%br

.row
  .span12
    %img{:src => @restaurant.picture}

%br

.row
  .span2
    %p
      %strong Type:
      = @restaurant.restaurant_type

  .span2
    %p
      %strong Spécialité:
      = @restaurant.speciality


  .span2
    %p
      %strong Budget min:
      = "#{@restaurant.budget_min} €"

  .span2
    %p
      %strong Budget max:
      = "#{@restaurant.budget_max} €"
        
  .span3
    %p
      %strong Temps de marche:
      = "#{@restaurant.time_to_go} minutes"


.row
  .span2
    %p
      %strong Service:
      = "#{@restaurant.ratings.first.quality_service} / 10"

  .span2
    %p
      %strong Nourriture:
      = "#{@restaurant.ratings.first.quality_food} / 10"


  .span2
    %p
      %strong Ambiance:
      = "#{@restaurant.ratings.first.ambience} / 10"

  .span2
    %p
      %strong Quantité:
      = "#{@restaurant.ratings.first.quantity} / 10"

%br

.row
  .span12
    .hero-unit
      %p= @restaurant.description

%h3 Dates d'ouvertures

.hero-unit= @restaurant.intervals.inspect

%table.table.table-striped
  %tr
    %th #Lundi
    %th #Mardi
    %th #Mercredi
    %th #Jeudi
    %th #Vendredi



.btn.btn-inverse
  = link_to restaurants_path, :style => "color:white!important;" do
    %i.icon-arrow-left.icon-white
    Back
.btn.btn-inverse
  = link_to edit_restaurant_path(@restaurant), :style => "color:white!important;" do
    %i.icon-pencil.icon-white
    Edit





