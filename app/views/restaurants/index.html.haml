%h1 Listing restaurants

%table.table.table-striped
  %tr
    %th #Name
    %th #Budget
    %th #Quality
    %th #Quantity
    %th #Time to go
    %th #Lundi
    %th #Mardi
    %th #Mercredi
    %th #Jeudi
    %th #Vendredi
    %th #Actions
    %th #Voter

  - @restaurants.each do |restaurant|
    %tr
      %td= restaurant.name
      %td #{restaurant.budget} €
      %td #{restaurant.quality} / 10
      %td #{restaurant.quantity} / 10
      %td #{restaurant.time_to_go} min
      %td= if(restaurant.lundi) then "Ouvert" else "Fermé" end
      %td= if(restaurant.mardi) then "Ouvert" else "Fermé" end
      %td= if(restaurant.mercredi) then "Ouvert" else "Fermé" end
      %td= if(restaurant.jeudi) then "Ouvert" else "Fermé" end
      %td= if(restaurant.vendredi) then "Ouvert" else "Fermé" end
      %td
        .btn-group
          %button.btn.btn-primary Action
          %button.btn.btn-primary.dropdown-toggle(data-toggle="dropdown")
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Show', restaurant
            %li= link_to 'Edit', edit_restaurant_path(restaurant)
            %li= link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete
      %td
        .btn-group
          -if restaurant.voted_on_by? current_user
            %button.btn.btn-primary.disabled Vote effectué
            %button.btn.btn-primary.disabled.dropdown-toggle(data-toggle="dropdown")
          -else
            %button.btn.btn-primary Vote
            %button.btn.btn-primary.dropdown-toggle(data-toggle="dropdown")
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to upvote_restaurant_path(restaurant) do
                  %i.icon-plus
                  Positif
              %li
                = link_to downvote_restaurant_path(restaurant) do
                  %i.icon-minus
                  Négatif

.btn.btn-inverse
  = link_to dashboard_restaurants_path, :style => "color:white!important;" do
    %i.icon-arrow-left.icon-white
    Back